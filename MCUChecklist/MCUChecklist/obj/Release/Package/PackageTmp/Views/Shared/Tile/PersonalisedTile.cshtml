@using MCUChecklist.Models

@model Film

<div class="tile" data-media="@(Model.IsSeries ? "Series" : "Film")">
    <div class="background-image" data-background="@("../Content/Images/FilmArtwork/" + Model.FilmID + ".png")"></div>
    <div class="inner-tile flex column h-between">
        <div class="top flex v-center h-center">
            <span>@Model.FilmName</span>
        </div>
        <div class="middle flex v-start h-start">
            <span class="synopsis">@Model.FilmSynopsis</span>
        </div>
        <div class="bottom flex v-center h-around">
            @if (Model.FilmWatched)
            {
                <div class="watched button selected flex v-center h-between">
                    <i class="material-icons">check_circle</i>
                    <span>Film watched!</span>
                </div>
            }
            else
            {
                <div class="watched button flex v-center h-between">
                    <i class="material-icons">add_circle_outline</i>
                    <span>Add to watched?</span>
                </div>
            }

            @if (Model.FilmLiked)
            {
                <div class="favourite button selected flex vh-center">
                    <i class="material-icons">favorite</i>
                </div>
            }
            else
            {
                <div class="favourite button selcted flex vh-center">
                    <i class="material-icons">favorite_border</i>
                </div>
            }
        </div>
    </div>
</div>
